    <body class="background">
        <!-- Image and text -->
      <nav class="navbar navbar navbar-dark bg-dark" style="height:10%;">
        <a class="navbar-brand" href="/">
          <img src="/images/left-arrow.png" width="30" height="30" class="d-inline-block align-top" alt="" style="margin-right:10px; ">
          Fertilizer Subsidy Distribution
        </a>
        <form method="POST" action="/gov_logout">
          <button class="btn btn-white mybtn" style="margin-bottom: auto;">Logout</button>
        </form>
      </nav>
      <div>
          <br><br>
          <% var tokenCount; %>
          <%= tokenCount %>
          <div class="container">
            <div class="row">
                <div class="col-md-8" style="box-sizing: border-box; padding: 30px; background-color: white; margin: auto; height: 300px; border-radius: 5px; box-shadow: 0 0 10px rgb(97, 92, 92);">
                       
                        <button onclick="document.getElementById('id01').style.display='block'" class="btn btn-primary mybtn">Add Tokens</button>
                        <button onclick="document.getElementById('id02').style.display='block'" class="btn btn-primary mybtn">Generate report</button>
